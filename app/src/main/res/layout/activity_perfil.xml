<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.signupscreen.PerfilActivity"
    android:orientation="vertical"
    android:background="@color/whitecolor">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:id="@+id/linear_layout_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:background="@color/colorPrimary"
            >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            >

        </LinearLayout>

        <ImageView
            android:id="@+id/perfil_img"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_perfil_img"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_text_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="15dp"
            android:layout_margin="8dp"
            android:textColorHint="@color/fontcolor"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:textColor="@color/fontcolor"
            />
        <EditText
            android:id="@+id/edt_text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_margin="8dp"
            android:textColorHint="@color/fontcolor"
            android:hint="Email"
            android:textColor="@color/fontcolor"
            android:inputType="textEmailAddress"
            android:drawableTintMode="multiply"
            />
        <EditText
            android:id="@+id/edt_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_margin="8dp"
            android:textColorHint="@color/fontcolor"
            android:hint="Senha"
            android:textColor="@color/fontcolor"
            android:inputType="textEmailAddress"
            android:drawableTintMode="multiply"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spn_cidade"
                android:layout_weight="2"
                android:layout_margin="8dp"

                >

            </Spinner>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spn_estado"
                android:layout_weight="1"
                android:layout_margin="8dp"
                >

            </Spinner>
            <!-->
            <EditText
                android:id="@+id/edt_text_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_margin="8dp"
                android:textColorHint="@color/fontcolor"
                android:hint="Estado"
                android:textColor="@color/whitecolor"
                android:inputType="textEmailAddress"
                android:drawableTintMode="multiply"
                android:layout_weight="1"
                />
                <!-->
        </LinearLayout>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spn_time"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"


            >
            </Spinner>

        <Button
            android:id="@+id/btn_acessa_tela3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:textColor="@color/whitecolor"
            android:background="@drawable/ripple"
            android:layout_marginTop="16dp"/>


    </LinearLayout>

</LinearLayout>
